{
  "ci": {
    "collect": {
      "chrome-flags": ["--ignore-certificate-errors"],
      "numberOfRuns": 1,
      "url": "https://127.0.0.1:8000/",
      "settings": {
        "configPath": ".scripts/lighthouse/config.js",
        "skipAudits": [
          "themed-omnibox",
          "redirects-http",
          "load-fast-enough-for-pwa",
          "service-worker",
          "splash-screen",
          "webapp-install-banner",
          "works-offline"
        ]
      }
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "canonical": "off",
        "offline-start-url": "off",
        "installable-manifest": "off",
        "service-worker": "off",
        "splash-screen": "off",
        "themed-omnibox": "off",
        "works-offline": "off",
        "load-fast-enough-for-pwa": "off",
        "redirects-http": "off",
        "render-blocking-resources": "off",
        "uses-long-cache-ttl": "off",
        "meta-description": "off",
        "errors-in-console": "off",
        "offscreen-images": "off",
        "color-contrast": "off",
        "duplicate-id": "off",
        "dom-size": "off",
        "maskable-icon": "off",
        "unused-javascript": "off",
        "uses-rel-preconnect": "off",
        "largest-contentful-paint": "off",
        "frame-title": "off"
      }
    },
    "upload": {
      "target": "lhci",
      "serverBaseUrl": "https://lighthouse.dev.tmcloud.io/"
    }
  }
}
