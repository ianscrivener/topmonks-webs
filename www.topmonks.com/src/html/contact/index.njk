    :root {
      --tm-contact-darkgrey: #3C3C3B;
      --tm-contact-lightgrey: #777776;
    }

    body {
      line-height: 1.8;
    }

    h2 {
      text-transform: none;
    }

    h3 {
      color: var(--tm-contact-darkgrey);
      text-align: left;
    }

    span {
      color: var(--tm-contact-darkgrey);
    }

    body {
      background: url("{{"topmonks.com/bngd_site.png" | cloudinaryUrl }}") center 30% no-repeat;
      background-size: 100%;
    }

    footer span {
      color: #ffffff;
    }

    .box-member {
      padding: 10px 28px;
    }

    .box-member img {
      border-radius: 50%;
    }

    .box_member-contact {
      align-self: center;
    }

    p.box_text-about {
      color: var(--tm-contact-lightgrey);
      height: 60px;
    }

    .box.address {
      padding: 0;
    }


    .box.address .content {
      padding: 0 16px 8px;
    }

    .box.address img {
      margin: 0;
      border-top-left-radius: 20px;
      border-top-right-radius: 20px;
    }

    hr {
      background-color: #F3F3F3;
      height: 2px;
      border: none;
    }

    .line-between {
      padding: 24px 0;
    }

    #billing {
      text-transform: uppercase;
      line-height: 1.8;
    }

    #billing a {
      line-height: 6;
    }

    @media screen and (min-width: 840px) {
      p.box_text-about {
        height: 60px;
      }
    }

    @media (max-width: 840px) {
      p.box_text-about {
        height: 90px;
      }

      #contacts-main .box img {
        margin: 2em 0 0;
      }

      hr {
        width: 736px;
        margin-top: 2.5em;
      }
    }

    @media (max-width: 480px) {
      body {
        line-height: 1.5;
        background-size: auto;
      }

      p.box_text-about {
        height: 100px;
      }

      hr {
        width: 288px;
      }
    }
  </style>
{% endblock %}

