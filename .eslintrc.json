{
  "env": {
    "browser": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "allowImportExportEverywhere": true,
    "ecmaVersion": 2021,
    "ecmaFeatures": {
      "spread": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "ava",
    "lit",
    "prettier",
    "promise"
  ],
  "rules": {
    "prettier/prettier": "error"
  },
  "extends": [
    "prettier",
    "plugin:ava/recommended",
    "plugin:lit/recommended",
    "plugin:promise/recommended"
  ]
}
