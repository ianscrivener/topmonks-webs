                  <span property="addressLocality">Praha 4, 141 00</span><br>
                  <a href="https://goo.gl/maps/SBK1BRsmgu22" class="button" data-marker="praha" target="_blank" rel="noopener">mapa</a>
                  <div property="geo" typeof="GeoCoordinates">
                    <meta property="latitude" content="50.045386">
                    <meta property="longitude" content="14.491246">
                  </div>
                </div>
              </div>
            </div>

            <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-1" style="align-self: center">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
