{% extends 'layouts/main.njk' %}
{% set language = cs %}
{% set contactMap = images["contact-map.png"]["public_id"] %}
{% set teamSlavicek = images["jan-slavicek.png"]["public_id"] %}
{% set teamTopmonks = images["TopMonks.png"]["public_id"] %}
{% set teamLakum = images["logo-lakum.png"]["public_id"] %}


{% block title %}
  PostCube - O nás
{% endblock %}
{% block head %}
  <meta name="description"
        content="Chytrá schránka PostCube pro vyzvedávání zásilek kdykoliv.">
  <link rel="canonical" href="https://postcube.cz/">
  <meta property="og:type" content="company">
  <meta property="og:url" content="https://www.postcube.cz/">
  <meta property="og:site_name" content="postcube.cz">

  <style>
    img {
      width: 100%;
      height: auto;
    }

    h1 {
      margin: 0 0 1em;
    }
    .main-info {
      padding-top: 10em;
    }

    .main-info__content--location {
      font-size: 24px;
      line-height: 36px;
      color: var(--postcube-black);
      margin-bottom: 1em;
    }

    .main-info__content a {
      font-size: 24px;
      line-height: 36px;
      color: var(--postcube-primary);
      text-decoration: none;
      padding-top: 0;
      border-bottom: 2px solid transparent;
    }

    .main-info__content a:hover {
      border-bottom: 2px solid var(--postcube-secondary);
    }

    .team__member--photo {
      margin: 32px 32px 0 0;
      padding-bottom: 2em;
    }

    .team__member--details {
      max-width: 617px;
      margin-bottom: 4em;
    }

    .main-info {
      position: relative;
    }
    @media screen and (min-width: 840px) {
      .main-info__content h1 {
        font-size: 70px;
      }
    }

    @media screen and (min-width: 1440px) {
      .main-info img {
        width: 45%;
        height: auto;
        position: absolute;
        top: 25%;
        right: 0;
      }
    }

    @media (min-width: 1024px) and (max-width: 1439px) {
      .main-info img {
        width: 420px;
        height: auto;
        position: absolute;
        top: 25%;
        right: 0;
      }
    }

    @media (max-width: 1023px) {
      .main-info img {
        margin: 4em 0;
      }
    }

    .contact {
      margin-top: 8em;
    }

  </style>

{% endblock %}

{% block content %}
