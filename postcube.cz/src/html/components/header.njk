  <script>
    var appBar = document.querySelector(".app-bar");
    var hamburger = document.querySelector(".hamburger__container");
    var menu = document.querySelector(".menu");
    hamburger.addEventListener("click", toggleMenu(hamburger));

    function toggleMenu(hamburger) {
      return function () {
        hamburger.classList.toggle("hamburger__container--open");
        appBar.classList.toggle("app-bar--open");
      };
    }

    var lastPosition = 0;
    var ticking = false;
    const onScroll = function () {
      lastPosition = window.scrollY;
      if (!ticking) {
        window.requestAnimationFrame(function () {
          if (lastPosition > 0) {
            appBar.classList.add("app-bar--sticky","logo--scroll");
          } else {
            appBar.classList.remove("app-bar--sticky","logo--scroll");
          }
          ticking = false;
        });
        ticking = true;
      }
    };


    const onResize = function () {
      if (!ticking) {
        window.requestAnimationFrame(function () {
          if (window.matchMedia("(min-width: 841px)").matches) {
            menu.classList.add("menu--horizontal");
          } else {
            menu.classList.remove("menu--horizontal");
          }
          ticking = false;
        });
        ticking = true;
      }
    };
    document.addEventListener("scroll", onScroll, {passive: true});
    window.addEventListener("resize", onResize, {passive: true});

    if (window.matchMedia("(min-width: 841px)").matches) {
      menu.classList.toggle("menu--horizontal");
    }
  </script>


