{% extends 'layouts/main.njk' %}
{% set language = cs %}
{% set firmyBG = images["firmy-bg01.png"]["public_id"] %}
{% set firmyBG01 = images["hp-bg02.png"]["public_id"] %}
{% set firmyBG02 = images["firmy-bg02.png"]["public_id"] %}

{% block title %}
  PostCube - Firmy
{% endblock %}
{% block head %}
  <meta name="description" content="Chytrá schránka PostCube pro vyzvedávání zásilek kdykoliv.">
  <link rel="canonical" href="https://postcube.cz/">
  <meta property="og:type" content="company">
  <meta property="og:url" content="https://www.postcube.cz/">
  <meta property="og:site_name" content="postcube.cz">

  <style>
    img, picture {
      width: 100%;
      height: auto;
    }

    .testimonial__content {
      max-width: 80%;
    }

    .main-info__content {
      max-width: 97%;
    }

    .about .icon-section__content svg {
      min-height: 48px;
    }

    @media screen and (min-width: 840px) {
      .main-info {
        align-self: center;
        background-image: url({{ firmyBG | cloudinaryUrl(dpr="auto", width=860) }});
        background-size: 45% auto;
        background-position: center right;
        background-repeat: no-repeat;
        margin-top: 8em;
      }

      .main-info__bg {
        display: none;
      }
    }

    @media (max-width: 839px) {
      .main-info img {
        display: block;
      }

      .main-info .mdc-layout-grid {
        padding: 0;
      }

      .main-info__content {
        padding: 20px;
      }

      .main-info__bg {
        margin-top: 2em;
        align-self: center;
      }
    }

    @media screen and (min-width: 840px) {
      .main-info__content h1 {
        font-size: 70px;
      }
    }
  </style>

{% endblock %}

{% block content %}
  <section id="" class="main-info">
    <div class="mdc-layout-grid">
      <div class="mdc-layout-grid__inner layout-wrapper">
        <div class="main-info__bg mdc-layout-grid__cell mdc-layout-grid__cell--span-6-desktop">
          <picture>
            <source media="screen and (max-width: 839px)" srcset="{{ firmyBG | cloudinaryUrl(width=420) }} 1x,
                {{ box_n_woman | cloudinaryUrl(width=600) }} 1.5x,
                {{ box_n_woman | cloudinaryUrl(width=600) }} 2x">
            <source media="screen and (min-width: 840px)" srcset="{{ firmyBG | cloudinaryUrl(width=860) }} 1x,
                {{ box_n_woman | cloudinaryUrl(width=860) }} 1.5x,
                {{ box_n_woman | cloudinaryUrl(width=860) }} 2x">
            <img alt="Fotka PostCube" loading="lazy" src="{{ firmyBG | cloudinaryUrl }}" width="860" height="574">
          </picture>
        </div>
        <div class="main-info__content mdc-layout-grid__cell mdc-layout-grid__cell--span-6">
          <h1>PostCube do bytového domu nebo firmy</h1>
          <p>Soustřeďte se na činnosti, které za to stojí. Kurýr vám zásilku doručí bez vaší přítomnosti!</p>
          <a href="https://www.instagram.com/post.cube"><b>#necekamnakuryra</b></a>
        </div>
      </div>
    </div>
  </section>

