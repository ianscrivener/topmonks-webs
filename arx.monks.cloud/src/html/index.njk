{% extends "layouts/arx.njk" %}
{% from "common/helpers.njk" import image %}

{% block links %}
  <link rel="stylesheet" href="/assets/css/hp.css">
{% endblock %}

{% block main %}
  <section class="intro">
    <div class="mdc-layout-grid layout-arx">
      <div class="mdc-layout-grid__inner">
        <div class="intro__box box--white mdc-layout-grid__cell mdc-layout-grid__cell--span-8-tablet">
          <div><p><span><b>We are proud of our<br>20-year track record</b></span> of building great companies in
              successful partnerships with business owners and managers.</p>
          </div>
          <div class="button">
            <a class="button__info" href="/investments/">OUR PORTFOLIO</a>
          </div>
        </div>
        <div class="intro__video--phone mdc-layout-grid__cell mdc-layout-grid__cell--span-8-tablet">
          <video id="video" aria-hidden="true" muted loop playsinline
                 poster="https://res.cloudinary.com/topmonks/image/upload/v1628779515/arx.monks.cloud/header-poster.png">
            <source
              src="https://res.cloudinary.com/topmonks/video/upload/f_auto,h_744,q_auto,w_1177/v1628344441/arx.monks.cloud/arx-header.mp4"/>
          </video>
          <button id="play-btn" class="play-btn" aria-label="Přehrát video o PostCube">
            <svg width="68" height="68" viewBox="0 0 68 68" fill="none" xmlns="http://www.w3.org/2000/svg">
              <circle opacity="0.43" cx="34" cy="34" r="34" fill="#0A2137"/>
              <path d="M48 33.5L26.25 46.0574L26.25 20.9426L48 33.5Z" fill="white"/>
            </svg>
          </button>
          <script type="module">const video = document.getElementById("video");
            const playButton = document.getElementById("play-btn");
            playButton.addEventListener("click", () => {
              video.play();
              video.controls = true;
              playButton.style.display = "none";
            });</script>
        </div>
        <div class="intro__video--pc mdc-layout-grid__cell mdc-layout-grid__cell--span-8-tablet">
          <video aria-hidden="true" muted autoplay loop playsinline
                 poster="https://res.cloudinary.com/topmonks/image/upload/dpr_auto,f_auto,h_740,w_1177,q_auto/v1628779515/arx.monks.cloud/header-poster.png">
            <source
              src="https://res.cloudinary.com/topmonks/video/upload/f_auto,h_740,w_1177,q_auto/v1628344441/arx.monks.cloud/arx-header.mp4"/>
          </video>
        </div>
      </div>
    </div>
  </section>
  <div class="mdc-layout-grid layout-arx">
    <div class="mdc-layout-grid__inner">
      <div class=" mdc-layout-grid__cell mdc-layout-grid__cell--span-12">
        <div class="square-icon"></div>
      </div>
    </div>
  </div>

  <section class="about">
    <div class="column-1">
      <div class="column-1__inner-box specific-height__box">
        <h3 class="underline--light">Mission statement</h3>
        <p>Our core objective is to form successful partnerships with owners, managers
          and other stakeholders to realise the full potential of our portfolio companies
          while achieving superior returns for the firm‘s&nbsp;investors and partner
          entrepreneurs.</p>
      </div>
    </div>
    <div class="column-2 about__bg specific-height__box">
      <div class="column-2__inner-box">
        <h3 class="underline--light">Background history</h3>
        <p>With more than € 300&nbsp;million raised in four funds, ARX has become a
          leading private equity firm in its segment operating in the Central European
          region. We’re proud of our 20-year track-record investing in and supporting
          the growth of mid-sized companies.</p>
      </div>
    </div>
  </section>

  <section class="investments">
    <div class="column-1 investments__bg">
      <div class="broskev">
        <h3>Facts and figures</h3>
      </div>
    </div>
    <div class="investments__box">
      <div class="box_row">
        <div class="box--white">
          <h4>$4.2B</h4>
          <p>committed capital under management</p>
        </div>
        <div class="box--white">
          <h4>$25M – 1B</h4>
          <p>committed capital under management</p>
        </div>
        <div class="box--white">
          <h4>$330M</h4>
          <p>committed capital under management</p>
        </div>
        <div class="box--white">
          <h4>$4B</h4>
          <p>committed capital under management</p>
        </div>
        <div class="box--white">
          <h4>100+</h4>
          <p>committed capital under management</p>
        </div>
      </div>
    </div>
  </section>

