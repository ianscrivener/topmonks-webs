{% extends "layouts/arx.njk" %}
{% from "common/helpers.njk" import image %}

{% block links %}
  <link rel="stylesheet" href="/assets/css/contact.css">
  <style>
    @media (max-width: 739px) {
      img {
        width: 100%;
        height: 200px;
        object-fit: cover;
      }

      .intro__format {
        display: block;
      }
    }
    @media (min-width: 740px) {
      .intro__contact-img {
        display: none;
      }
    }

    @media (min-width: 740px) and (max-width: 839px) {
      .intro {
        align-self: center;
        background-image: url({{ "/arx.monks.cloud/contact-header.jpg" | cloudinaryUrl(width=860) }});
        background-size: 60% auto;
        background-position: top right;
        background-repeat: no-repeat;
        min-height: 300px;
      }
    }

    @media (min-width: 839px) and (max-width: 1439px) {
      .intro {
        align-self: center;
        background-image: url({{ "/arx.monks.cloud/contact-header.jpg" | cloudinaryUrl(width=860) }});
        background-size: 75% auto;
        background-position: top right;
        background-repeat: no-repeat;
        min-height: 500px;
      }
    }
    @media (min-width: 1440px) {
      .intro {
        align-self: center;
        background-image: url({{ "/arx.monks.cloud/contact-header.jpg" | cloudinaryUrl(width=860) }});
        background-size: 65% auto;
        background-position: top right;
        background-repeat: no-repeat;
        min-height: 600px;
      }
    }
  </style>
{% endblock %}

{% block main %}
  <section class="intro">
    <div class="mdc-layout-grid layout-arx">
      <div class="intro__format mdc-layout-grid__inner">
        <div class="intro__box box--yellow mdc-layout-grid__cell">
          <p>Contacts</p>
        </div>
        <picture class="intro__contact-img mdc-layout-grid__cell mdc-layout-grid__cell--span-8-tablet">
          <source media="screen and (max-width: 399px)"
                  srcset="{{ "/arx.monks.cloud/contact-header.jpg" | cloudinaryUrl(width=400) }} 1x,
                      {{ "/arx.monks.cloud/contact-header.jpg" | cloudinaryUrl(width=400) }} 1.5x,
                      {{ "/arx.monks.cloud/contact-header.jpg" | cloudinaryUrl(width=400) }} 2x">
          <source media="screen and (min-width: 400px) and (max-width: 599px)"
                  srcset="{{ "/arx.monks.cloud/contact-header.jpg" | cloudinaryUrl(width=420) }} 1x,
                {{ "/arx.monks.cloud/contact-header.jpg" | cloudinaryUrl(width=600) }} 1.5x,
                {{ "/arx.monks.cloud/contact-header.jpg" | cloudinaryUrl(width=600) }} 2x">
          <source media="screen and (min-width: 840px)"
                  srcset="{{ "/arx.monks.cloud/contact-header.jpg" | cloudinaryUrl(width=860) }} 1x,
                {{ "/arx.monks.cloud/contact-header.jpg" | cloudinaryUrl(width=860) }} 1.5x,
                {{ "/arx.monks.cloud/contact-header.jpg" | cloudinaryUrl(width=860) }} 2x">
          <img alt="Fotografie PostCube u domu" loading="lazy"
               src="{{ "/arx.monks.cloud/contact-header.jpg" | cloudinaryUrl }}" width="860" height="574">
        </picture>
      </div>
    </div>
  </section>
  <section class="contact">
    <div class="mdc-layout-grid layout-arx">
      <div class="mdc-layout-grid__inner">
        <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-12">
          <h2 itemprop="name">ARX Equity Partners s.r.o.</h2>
          <div itemprop="address" itemscope="" itemtype="https://schema.org/PostalAddress">
            <span itemprop="streetAddress">28. října 12</span><br>
            <span itemprop="postalCode">110 00</span>
            <span itemprop="addressLocality">Praha 1</span><br>
          </div>
          <span><a itemprop="telephone" href="tel:+420 22 423 5399">Tel.: <b>+420 22 423 5399</b></a></span><br>
          <span><a itemprop="email" href="mailto:praha@arxequity.com"><b>praha@arxequity.com</b></a></span><br>
        </div>
      </div>
    </div>
  </section>

  <div class="contact__map mdc-layout-grid__cell mdc-layout-grid__cell--span-12">
    <a title="Show ARX office on map" target="_blank"
       href="https://www.google.com/maps/place/Arx+Equity+Partners+s.r.o./@50.0835359,14.420448,17z/data=!3m1!4b1!4m5!3m4!1s0x470b94ec3596373b:0xeba19b406adab57a!8m2!3d50.0835325!4d14.4226367?hl=cs-CZ"><img
        alt="ARX on map" src="/assets/img/map-contact.jpg" width="100%" height="auto"></a>
  </div>

{% endblock %}
